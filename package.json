{
    "name": "ef1p",
    "version": "1.0.0",
    "private": true,
    "description": "This package contains the scripts of the interactive website ef1p.com.",
    "homepage": "https://explained-from-first-principles.com",
    "bugs": {
        "url": "https://github.com/KasparEtter/ef1p/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KasparEtter/ef1p.git"
    },
    "license": "CC-BY-4.0",
    "author": "Kaspar Etter",
    "scripts": {
        "beep": "echo -e '\\a'",
        "bell": "tput bel",
        "build": "npm-run-all css-build ts-build md-build",
        "css-build": "npm-run-all css-compile css-prefix css-minify bell",
        "css-build-dark": "npm-run-all css-compile-dark css-prefix-dark css-minify-dark bell",
        "css-build-light": "npm-run-all css-compile-light css-prefix-light css-minify-light bell",
        "css-compile": "npm-run-all --parallel css-compile-dark css-compile-light",
        "css-compile-dark": "node-sass --output-style expanded --precision 6 scss/dark.scss assets/styles/dark.css",
        "css-compile-dark-with-map": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/dark.scss assets/styles/dark.css",
        "css-compile-light": "node-sass --output-style expanded --precision 6 scss/light.scss assets/styles/light.css",
        "css-compile-light-with-map": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 scss/light.scss assets/styles/light.css",
        "css-compile-with-map": "npm-run-all --parallel css-compile-dark-with-map css-compile-light-with-map",
        "css-lint": "stylelint --config .stylelintrc --syntax scss 'scss/**/*.scss' --cache --cache-location '.stylelintcache/'",
        "css-minify": "npm-run-all --parallel css-minify-dark css-minify-light",
        "css-minify-dark": "cleancss --level 1 --skip-import --output assets/styles/dark.min.css assets/styles/dark.css",
        "css-minify-dark-with-map": "cleancss --level 1 --skip-import --source-map --source-map-inline-sources --output assets/styles/dark.min.css assets/styles/dark.css",
        "css-minify-light": "cleancss --level 1 --skip-import --output assets/styles/light.min.css assets/styles/light.css",
        "css-minify-light-with-map": "cleancss --level 1 --skip-import --source-map --source-map-inline-sources --output assets/styles/light.min.css assets/styles/light.css",
        "css-minify-with-map": "npm-run-all --parallel css-minify-dark css-minify-light",
        "css-prefix": "npm-run-all --parallel css-prefix-dark css-prefix-light",
        "css-prefix-dark": "postcss --use autoprefixer --replace 'assets/styles/dark.css'",
        "css-prefix-light": "postcss --use autoprefixer --replace 'assets/styles/light.css'",
        "css-watch": "watch 'npm run css-build' scss",
        "css-watch-dark": "watch 'npm run css-build-dark' scss",
        "css-watch-light": "watch 'npm run css-build-light' scss",
        "css-with-map": "npm-run-all css-compile-with-map css-prefix css-minify-with-map",
        "img-scale": "imgscale() { sharp resize $1 --fit inside --withoutEnlargement --quality 80 --input \"$2\" --output \"{dir}/generated/{name}.$1{ext}\"; }; imgscalesizes() { mkdir -p $(dirname \"$1\")/generated; imgscale 2000 \"$1\"; imgscale 1000 \"$1\"; imgscale 500 \"$1\"; }; imgscalesizes",
        "lint": "npm-run-all --parallel css-lint md-lint ts-lint ts-circular",
        "logo-build": "npm-run-all logo-generate logo-convert",
        "logo-convert": "svgexport assets/images/logo.svg assets/images/logo.png 1000: && svgexport assets/images/logo.svg assets/images/logo-small.png 200:",
        "logo-generate": "ts-node assets/images/logo.ts",
        "md-build": "bundle exec jekyll build",
        "md-lint": "markdownlint .",
        "md-watch": "bundle exec jekyll serve --incremental --livereload --host=0.0.0.0 2>/dev/null",
        "ots-stamp": "ots-cli.js stamp",
        "ots-info": "ots-cli.js info",
        "ots-verify": "ots-cli.js verify",
        "ots-upgrade": "ots-cli.js upgrade",
        "pdf-generate": "ts-node typescript/node/pdf.ts",
        "react-update": "cp node_modules/react/umd/react.production.min.js node_modules/react-dom/umd/react-dom.production.min.js assets/scripts/external/",
        "sort-package": "sort-package-json",
        "start": "npm run watch",
        "svg-build": "svgbuild() { mkdir -p \"$1/generated\"; ts-node \"$1/graphics/$2.ts\" embedded > \"$1/generated/$2.embedded.svg\"; ts-node \"$1/graphics/$2.ts\" > \"$1/generated/$2.svg\"; svgexport \"$1/generated/$2.svg\" \"$1/generated/$2.png\" 2000:; }; svgbuild",
        "svg-watch": "svgwatch() { watch-run -p \"$1/graphics/$2.ts\" npm run svg-build \"$1\" \"$2\"; }; svgwatch",
        "test": "echo 'Error: no test specified' && exit 1",
        "ts-build": "webpack",
        "ts-circular": "madge --warning --circular --extensions ts ./typescript/",
        "ts-lint": "tslint --exclude 'node_modules/**/*' --exclude '_site/**/*' '**/*.ts?(x)'",
        "ts-watch": "webpack --watch",
        "watch": "npm-run-all --parallel css-watch-dark md-watch ts-watch"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/anchor-js": "^4.2.0",
        "@types/jquery": "^3.3.38",
        "@types/node": "^13.13.5",
        "@types/puppeteer": "^2.1.0",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "autoprefixer": "^9.7.6",
        "awesome-typescript-loader": "^5.2.1",
        "bootstrap": "^4.4.1",
        "bootswatch": "^4.4.1",
        "clean-css-cli": "^4.3.0",
        "jquery": "^3.5.1",
        "madge": "^3.9.0",
        "markdownlint-cli": "^0.23.0",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "opentimestamps": "^0.4.8",
        "popper.js": "^1.16.1",
        "postcss-cli": "^7.1.1",
        "puppeteer": "^3.0.4",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "sharp-cli": "^1.13.1",
        "sort-package-json": "^1.42.2",
        "source-map-loader": "^0.2.4",
        "stylelint": "^13.3.3",
        "stylelint-config-twbs-bootstrap": "^2.0.2",
        "svgexport": "^0.4.0",
        "ts-node": "^8.10.1",
        "tslint": "^6.1.2",
        "typescript": "^3.8.3",
        "watch": "^1.0.2",
        "watch-run": "^1.2.5",
        "webpack": "^4.43.0",
        "webpack-build-notifier": "^2.0.0",
        "webpack-cli": "^3.3.11"
    }
}
