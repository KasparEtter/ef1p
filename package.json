{
    "name": "ef1p",
    "version": "1.0.0",
    "private": true,
    "description": "This package contains the scripts of the interactive website ef1p.com.",
    "homepage": "https://explained-from-first-principles.com",
    "bugs": {
        "url": "https://github.com/KasparEtter/ef1p/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KasparEtter/ef1p.git"
    },
    "license": "CC-BY-4.0",
    "author": "Kaspar Etter",
    "scripts": {
        "beep": "echo -e '\\a'",
        "bell": "tput bel",
        "build": "npm-run-all clean scss-build ts-build img-build svg-build thumbnail md-build",
        "clean": "rm -f pages/*/generated/*.{svg,png,jpg,jpeg}",
        "export": "ts-node code/node/export.ts",
        "img-build": "ts-node code/node/images.ts",
        "img-watch": "watch-run -p 'pages/*/images/*.scaled.@(jpeg|jpg|png)' npm run img-build",
        "lint": "npm-run-all --parallel scss-lint md-lint ts-lint ts-circular",
        "logo-build": "npm-run-all logo-generate logo-convert",
        "logo-convert": "svgexport assets/logos/logo.svg assets/logos/logo.png 1000: && svgexport assets/logos/logo.svg assets/logos/logo-small.png 200:",
        "logo-generate": "ts-node assets/logos/logo.ts",
        "md-build": "bundle exec jekyll build",
        "md-lint": "markdownlint .",
        "md-watch": "bundle exec jekyll serve --incremental --livereload 2>/dev/null",
        "ots-info": "info() { ots-cli.js info \"pages/$1/$1.md.ots\"; find \"pages/$1/generated\" -name '*.pdf.ots' -exec ots-cli.js info {} +; }; info",
        "ots-remove": "remove() { rm \"pages/$1/$1.md.ots\"; find \"pages/$1/generated\" -name '*.pdf.ots' -exec rm {} +; }; remove",
        "ots-remove-bak": "removebak() { rm \"pages/$1/$1.md.ots.bak\"; find \"pages/$1/generated\" -name '*.pdf.ots.bak' -exec rm {} +; }; removebak",
        "ots-stamp": "stamp() { ots-cli.js stamp \"pages/$1/$1.md\"; find \"pages/$1/generated\" -name '*.pdf' -exec ots-cli.js stamp {} +; }; stamp",
        "ots-upgrade": "upgrade() { ots-cli.js upgrade \"pages/$1/$1.md.ots\"; find \"pages/$1/generated\" -name '*.pdf.ots' -exec ots-cli.js upgrade {} +; }; upgrade",
        "ots-verify": "verify() { ots-cli.js verify \"pages/$1/$1.md.ots\"; find \"pages/$1/generated\" -name '*.pdf.ots' -exec ots-cli.js verify {} +; }; verify",
        "react-update": "cp node_modules/react/umd/react.production.min.js node_modules/react-dom/umd/react-dom.production.min.js assets/scripts/external/",
        "scss-build": "npm-run-all scss-compile scss-prefix scss-minify bell",
        "scss-build-dark": "npm-run-all scss-compile-dark scss-prefix-dark scss-minify-dark bell",
        "scss-build-light": "npm-run-all scss-compile-light scss-prefix-light scss-minify-light bell",
        "scss-compile": "npm-run-all --parallel scss-compile-dark scss-compile-light",
        "scss-compile-dark": "node-sass --output-style expanded --precision 6 styles/dark.scss assets/styles/dark.css",
        "scss-compile-dark-with-map": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 styles/dark.scss assets/styles/dark.css",
        "scss-compile-light": "node-sass --output-style expanded --precision 6 styles/light.scss assets/styles/light.css",
        "scss-compile-light-with-map": "node-sass --output-style expanded --source-map true --source-map-contents true --precision 6 styles/light.scss assets/styles/light.css",
        "scss-compile-with-map": "npm-run-all --parallel scss-compile-dark-with-map scss-compile-light-with-map",
        "scss-lint": "stylelint --config .stylelintrc --syntax scss 'styles/**/*.scss' --cache --cache-location '.stylelintcache/'",
        "scss-minify": "npm-run-all --parallel scss-minify-dark scss-minify-light",
        "scss-minify-dark": "cleancss --level 1 --skip-import --output assets/styles/dark.min.css assets/styles/dark.css",
        "scss-minify-dark-with-map": "cleancss --level 1 --skip-import --source-map --source-map-inline-sources --output assets/styles/dark.min.css assets/styles/dark.css",
        "scss-minify-light": "cleancss --level 1 --skip-import --output assets/styles/light.min.css assets/styles/light.css",
        "scss-minify-light-with-map": "cleancss --level 1 --skip-import --source-map --source-map-inline-sources --output assets/styles/light.min.css assets/styles/light.css",
        "scss-minify-with-map": "npm-run-all --parallel scss-minify-dark scss-minify-light",
        "scss-prefix": "npm-run-all --parallel scss-prefix-dark scss-prefix-light",
        "scss-prefix-dark": "postcss --use autoprefixer --replace 'assets/styles/dark.css'",
        "scss-prefix-light": "postcss --use autoprefixer --replace 'assets/styles/light.css'",
        "scss-watch": "watch 'npm run scss-build' styles",
        "scss-watch-dark": "watch 'npm run scss-build-dark' styles",
        "scss-watch-light": "watch 'npm run scss-build-light' styles",
        "scss-with-map": "npm-run-all scss-compile-with-map scss-prefix scss-minify-with-map",
        "serve": "bundle exec jekyll serve",
        "serve-network": "bundle exec jekyll serve --host=0.0.0.0",
        "sort-package": "sort-package-json",
        "start": "npm run watch",
        "svg-build": "ts-node code/node/graphics.ts",
        "svg-watch": "watch-run -p 'pages/*/graphics/*.ts,code/svg/**/*.ts' npm run svg-build",
        "test": "echo 'Error: no test specified' && exit 1",
        "thumbnail": "ts-node code/node/thumbnail.ts",
        "ts-analyze": "webpack --analyze",
        "ts-build": "webpack",
        "ts-circular": "madge --warning --circular --extensions ts ./code/",
        "ts-lint": "tslint --exclude 'node_modules/**/*' --exclude '_site/**/*' '**/*.ts?(x)'",
        "ts-stats": "webpack --json > webpack-stats.json",
        "ts-watch": "webpack --watch",
        "watch": "npm-run-all --parallel scss-watch img-watch md-watch svg-watch ts-watch"
    },
    "devDependencies": {
        "@types/anchor-js": "4.2.0",
        "@types/create-hash": "1.2.2",
        "@types/create-hmac": "1.1.0",
        "@types/glob": "7.1.3",
        "@types/gtag.js": "0.0.3",
        "@types/jquery": "3.5.5",
        "@types/katex": "0.11.0",
        "@types/node": "14.14.11",
        "@types/punycode": "2.1.0",
        "@types/puppeteer": "5.4.2",
        "@types/react": "17.0.0",
        "@types/react-dom": "17.0.0",
        "autoprefixer": "10.1.0",
        "bootstrap": "4.5.3",
        "bootswatch": "4.5.3",
        "clean-css-cli": "4.3.0",
        "create-hash": "1.2.0",
        "create-hmac": "1.1.7",
        "glob": "7.1.6",
        "inspectpack": "4.5.2",
        "jquery": "3.5.1",
        "katex": "0.12.0",
        "madge": "3.12.0",
        "markdownlint-cli": "0.25.0",
        "node-sass": "5.0.0",
        "npm-run-all": "4.1.5",
        "opentimestamps": "0.4.8",
        "popper.js": "1.16.1",
        "postcss": "8.2.0",
        "postcss-cli": "8.3.0",
        "punycode": "2.1.1",
        "puppeteer": "5.5.0",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "readable-stream": "3.6.0",
        "safe-buffer": "5.2.1",
        "sharp-cli": "1.14.1",
        "sort-package-json": "1.48.0",
        "source-map-loader": "1.1.3",
        "stream-browserify": "3.0.0",
        "stylelint": "13.8.0",
        "stylelint-config-twbs-bootstrap": "2.1.0",
        "svgexport": "0.4.1",
        "ts-loader": "8.0.11",
        "ts-node": "9.1.1",
        "tslint": "6.1.3",
        "typescript": "4.1.2",
        "watch": "1.0.2",
        "watch-run": "1.2.5",
        "webpack": "5.10.0",
        "webpack-build-notifier": "2.1.0",
        "webpack-bundle-analyzer": "4.2.0",
        "webpack-cli": "4.2.0"
    }
}
