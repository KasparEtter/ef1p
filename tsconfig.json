{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "exactOptionalPropertyTypes": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "module": "CommonJS",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "./assets/scripts/internal/",
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2016",
        "typeRoots": ["./node_modules/@types/"],
    },
    "exclude": [
        "./_site/**/*",
        "./assets/**/*",
        "./node_modules/**/*",
        "./vendor/**/*",
        "./webpack.config.js",
    ],
    "ts-node": {
        "transpileOnly": true,
    },
}
